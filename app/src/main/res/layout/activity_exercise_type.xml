<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 제목 -->
        <TextView
            android:id="@+id/tv_type_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가슴 운동 종류 (세부 설명)"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- 부위 선택 버튼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btn_type_chest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="가슴" />

            <Button
                android:id="@+id/btn_type_back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="등" />

            <Button
                android:id="@+id/btn_type_shoulder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="어깨" />

            <Button
                android:id="@+id/btn_type_leg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="하체" />
        </LinearLayout>

        <!-- 표 전체를 가로 스크롤 가능하게 -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal"
            android:fillViewport="true">

            <!-- 네 개의 표를 세로로 쌓아두고, 자바에서 하나만 VISIBLE -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- ✅ 가슴 표 -->
                <TableLayout
                    android:id="@+id/table_type_chest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1">

                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="가슴(종류)"
                            android:textStyle="bold"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:includeFontPadding="false"
                            android:gravity="center_vertical"
                            android:background="@drawable/table_cell_border" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="세부설명"
                            android:textStyle="bold"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:includeFontPadding="false"
                            android:gravity="center_vertical"
                            android:background="@drawable/table_cell_border" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="펙덱 플라이"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:includeFontPadding="false"
                            android:gravity="center_vertical"
                            android:background="@drawable/table_cell_border" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:includeFontPadding="false"
                            android:gravity="top"
                            android:background="@drawable/table_cell_border"
                            android:text="타깃 부위: 가슴 안쪽(대흉근 내측)\n운동 방법: 팔꿈치를 살짝 굽힌 상태에서 두 팔을 벌렸다가 가슴으로 끌어안듯 모아줍니다. 팔이 아닌 가슴 수축을 느끼면서 실시합니다." />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="벤치프레스"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:includeFontPadding="false"
                            android:gravity="center_vertical"
                            android:background="@drawable/table_cell_border" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:includeFontPadding="false"
                            android:gravity="top"
                            android:background="@drawable/table_cell_border"
                            android:text="타깃 부위: 가슴 중간 + 삼두근 + 전면 어깨\n운동 방법: 벤치에 누워 바를 가슴 쪽으로 내렸다가 가슴으로 힘을 줘 밀어 올립니다. 어깨가 너무 들리지 않게 고정하고, 가슴으로 미는 느낌을 유지합니다." />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="인클라인 벤치프레스"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:includeFontPadding="false"
                            android:gravity="center_vertical"
                            android:background="@drawable/table_cell_border" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:includeFontPadding="false"
                            android:gravity="top"
                            android:background="@drawable/table_cell_border"
                            android:text="타깃 부위: 가슴 상부\n운동 방법: 벤치를 30~45도로 올린 뒤 바를 내렸다가 위로 밀어 올립니다. 시선은 항상 위쪽을 향하고, 가슴 상부에 자극이 오도록 합니다." />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="인클라인 덤벨프레스"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:includeFontPadding="false"
                            android:gravity="center_vertical"
                            android:background="@drawable/table_cell_border" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:includeFontPadding="false"
                            android:gravity="top"
                            android:background="@drawable/table_cell_border"
                            android:text="타깃 부위: 가슴 상부 + 균형 근육\n운동 방법: 양손에 덤벨을 들고 인클라인 벤치에 누운 상태에서 덤벨을 천천히 내렸다가 가슴으로 밀어 올립니다. 좌우가 흔들리지 않도록 컨트롤하는 것이 중요합니다." />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="딥스"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:includeFontPadding="false"
                            android:gravity="center_vertical"
                            android:background="@drawable/table_cell_border" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:includeFontPadding="false"
                            android:gravity="top"
                            android:background="@drawable/table_cell_border"
                            android:text="타깃 부위: 가슴 하부 + 삼두\n운동 방법: 상체를 약간 앞으로 기울인 상태에서 몸을 아래로 내렸다가 가슴과 팔 힘으로 다시 올라옵니다. 어깨가 너무 말리지 않도록 주의합니다." />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="푸쉬업"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:includeFontPadding="false"
                            android:gravity="center_vertical"
                            android:background="@drawable/table_cell_border" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:includeFontPadding="false"
                            android:gravity="top"
                            android:background="@drawable/table_cell_border"
                            android:text="타깃 부위: 가슴 전체\n운동 방법: 몸을 일직선으로 유지한 상태에서 팔을 굽혀 가슴을 바닥 쪽으로 내렸다가 다시 밀어 올립니다. 배와 엉덩이를 고정하고, 가슴이 바닥에 가까워질 때까지 내려가는 것이 좋습니다." />
                    </TableRow>
                </TableLayout>

                <!-- ✅ 등 표 -->
                <TableLayout
                    android:id="@+id/table_type_back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1"
                    android:visibility="gone">

                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="등(종류)"
                            android:textStyle="bold"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:includeFontPadding="false"
                            android:gravity="center_vertical"
                            android:background="@drawable/table_cell_border" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="세부설명"
                            android:textStyle="bold"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:includeFontPadding="false"
                            android:gravity="center_vertical"
                            android:background="@drawable/table_cell_border" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="풀업"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:includeFontPadding="false"
                            android:gravity="center_vertical"
                            android:background="@drawable/table_cell_border" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:includeFontPadding="false"
                            android:gravity="top"
                            android:background="@drawable/table_cell_border"
                            android:text="타깃 부위: 등 넓이(광배근)\n운동 방법: 어깨를 아래로 내리고 가슴을 살짝 들어 올린 느낌으로 몸을 당깁니다. 손으로만 당기지 말고 등을 이용해 끌어올린다는 느낌이 중요합니다." />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="랫 풀다운"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:includeFontPadding="false"
                            android:gravity="center_vertical"
                            android:background="@drawable/table_cell_border" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:includeFontPadding="false"
                            android:gravity="top"
                            android:background="@drawable/table_cell_border"
                            android:text="타깃 부위: 광배근 + 등 윗부분\n운동 방법: 바를 가슴 쪽으로 당기며 팔꿈치를 몸 옆으로 내립니다. 허리를 너무 말지 말고 약간 세운 자세를 유지합니다." />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="시티드 로우"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:includeFontPadding="false"
                            android:gravity="center_vertical"
                            android:background="@drawable/table_cell_border" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:includeFontPadding="false"
                            android:gravity="top"
                            android:background="@drawable/table_cell_border"
                            android:text="타깃 부위: 등 중앙부(능형근, 중부 승모)\n운동 방법: 팔꿈치를 뒤로 당기며 견갑을 모아줍니다. 가슴을 편 상태에서 어깨가 말리지 않도록 주의합니다." />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="하이로우"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:includeFontPadding="false"
                            android:gravity="center_vertical"
                            android:background="@drawable/table_cell_border" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:includeFontPadding="false"
                            android:gravity="top"
                            android:background="@drawable/table_cell_border"
                            android:text="타깃 부위: 등 중·하부 + 광배근\n운동 방법: 케이블 또는 머신을 이용해 몸 앞쪽으로 당겨줍니다. 등 전체에 부드러운 자극이 들어가는 느낌으로 실시합니다." />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="원암 덤벨로우"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:includeFontPadding="false"
                            android:gravity="center_vertical"
                            android:background="@drawable/table_cell_border" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:includeFontPadding="false"
                            android:gravity="top"
                            android:background="@drawable/table_cell_border"
                            android:text="타깃 부위: 등 전체 + 좌우 균형\n운동 방법: 한쪽 무릎을 벤치에 올리고 상체를 숙인 상태에서 덤벨을 옆구리 방향으로 당깁니다. 허리가 꺾이지 않도록 코어에 힘을 줍니다." />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="티바로우"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:includeFontPadding="false"
                            android:gravity="center_vertical"
                            android:background="@drawable/table_cell_border" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:includeFontPadding="false"
                            android:gravity="top"
                            android:background="@drawable/table_cell_border"
                            android:text="타깃 부위: 등 두께(요추·능형근)\n운동 방법: 상체를 앞으로 숙인 상태에서 바를 배 쪽으로 당깁니다. 허리에 과도한 부담이 가지 않도록 복근과 둔근에 힘을 줍니다." />
                    </TableRow>
                </TableLayout>

                <!-- ✅ 어깨 표 -->
                <TableLayout
                    android:id="@+id/table_type_shoulder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1"
                    android:visibility="gone">

                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="어깨(종류)"
                            android:textStyle="bold"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:includeFontPadding="false"
                            android:gravity="center_vertical"
                            android:background="@drawable/table_cell_border" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="세부설명"
                            android:textStyle="bold"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:includeFontPadding="false"
                            android:gravity="center_vertical"
                            android:background="@drawable/table_cell_border" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="스미스머신 숄더프레스"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:includeFontPadding="false"
                            android:gravity="center_vertical"
                            android:background="@drawable/table_cell_border" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:includeFontPadding="false"
                            android:gravity="top"
                            android:background="@drawable/table_cell_border"
                            android:text="타깃 부위: 어깨 전면 + 측면\n운동 방법: 스미스머신 바를 어깨 높이에서 시작해 위로 밀어 올립니다. 바가 얼굴 앞이 아니라 약간 앞쪽으로 지나가도록 하여 어깨 관절 부담을 줄여줍니다." />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="덤벨 숄더프레스"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:includeFontPadding="false"
                            android:gravity="center_vertical"
                            android:background="@drawable/table_cell_border" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:includeFontPadding="false"
                            android:gravity="top"
                            android:background="@drawable/table_cell_border"
                            android:text="타깃 부위: 어깨 전면 중심\n운동 방법: 양손에 덤벨을 들고 귀 옆에서 시작해 위로 밀어 올립니다. 허리를 과도하게 젖히지 않고, 복부에 힘을 주어 상체를 고정합니다." />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="덤벨 프론트 레이즈"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="2dp"
